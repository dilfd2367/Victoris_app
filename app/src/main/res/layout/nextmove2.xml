<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="431dp"
        android:layout_height="737dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/victorys_main" />

    <Button
        android:id="@+id/go_back"
        android:layout_width="179dp"
        android:layout_height="61dp"
        android:backgroundTint="#CFF1EE"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Вернуться в начало"
        android:textColor="#000000"
        android:translationY="-25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/victorys_emblem" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="440dp"
        android:layout_marginTop="200dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Your_score2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:text="Ваш счет"
                android:textColor="#000000"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:text="Правильные ответы:"
                android:textColor="#FFC107"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textQuestion5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:text="Первый вопрос"
                android:textColor="#000000"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textAnswer5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:text="Первый ответ"
                android:textColor="#35D4A4"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textQuestion6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:text="Второй вопрос"
                android:textColor="#000000"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textAnswer6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:text="Второй ответ"
                android:textColor="#35D4A4"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textQuestion7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:text="Третий вопрос"
                android:textColor="#000000"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textAnswer7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:text="Третий ответ"
                android:textColor="#35D4A4"
                android:textSize="32sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>